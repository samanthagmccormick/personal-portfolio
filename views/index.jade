extends layout

block content
	.container-fixed
		.row#header
			.col-lg-12.col-md-12.col-sm-12.col-xs-12.center
				h1.white I'm Sam and I'm a full-stack web developer.
			.col-lg-12.col-md-12.col-sm-12.col-xs-12.center
				h2.white Poke around below to see some of my work.

		//- List of portfolio projects!
		for item in portfolioItems
			.row#item(style='background-color: #{item.color}')
				.col-lg-12.col-md-12.col-sm-12.col-xs-12.center
					a.huge(style='font-family: #{item.font}' href='view/#{item.id}') #{item.title}
					ul
					for tag in item.tags
						a(href='')
							li.white #{tag}